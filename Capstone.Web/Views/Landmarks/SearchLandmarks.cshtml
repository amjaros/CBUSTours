@{
    ViewBag.Title = "Search Landmarks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Capstone.Web.Models
@model List<LandmarkModel>

<h2>@ViewBag.Title</h2>

@foreach(LandmarkModel LM in Model)
{ 
    <div>
        @LM.name
        <a href="~/Landmarks/LandmarkDetails?landmarkID=@LM.landmark_id"><img src="Capstone.Web/Content/imgs/Landmarks/@LM.image"/></a>
    </div>
}